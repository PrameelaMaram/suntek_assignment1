//program to find given number is prime or not using recursive and iterative approach and memory efficient approach
//->memory efficient
#include<stdio.h>
#include<math.h>
void main()
{
    int n,s,i,p;
    printf("enter a number");
    scanf("%d",&n);
    p=sqrt(n);
    if (n==1)
    {

     printf("neither prime nor composite");
     exit(0);
    }
    else if(n==2)
        s=1;
    else
    { for(i=2;i<=sqrt(n);i++)
      {  if(n%i==0)
         {
            s=0;
            break;
        }
        else s=1;
    }
    }
    if(s==1)
        printf("\n it is prime");
        else
            printf("\n it is not prime");

}


//->iterative approach
#include<stdio.h>

void main()
{
    int n,s,i;
    printf("enter a number");
    scanf("%d",&n);
    //if(n==2)
   // p=sqrt(n);
    if (n==1)
    {
         printf("neither prime nor composite");
        exit(0);
    }
    else
    {  if(n==2)
         s=1;
         else
         {  for(i=2;i<n;i++)
              {

               if(n%i==0)
                   {
                       s=0;
                       break;
                    }
               else s=1;
             }
         }
    }
    if(s==1)
        printf("\n it is prime");
        else
            printf("\n it is not prime");

}

